{
  "compilerOptions": {
    "target": "es2020",
    "module": "Node16",
    "lib": ["es2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node16"
  },
  "include": ["./scripts", "./hardhat.config.ts"],
  "exclude": ["node_modules", "dist"]
}
